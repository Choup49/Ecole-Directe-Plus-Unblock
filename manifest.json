{
    "manifest_version": 3,
    "name": "Ecole Directe Plus local Proxy",
    "version": "0.1.0",
    "description": "Creating a mini proxy for the website ecole-directe.plus to use EcoleDirecte's API without restrictions",
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "change_origin",
                "enabled": true,
                "path": "./netRequestRules/change_origin.json"
            }
        ]
    },
    "permissions": [
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "index.js"
    },
    "icons": {
        "48": "icons/edp-icon.svg",
        "96": "icons/edp-icon.svg"
    }
}